@model WhiteLagoon.Domain.Entities.Villa
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Villa</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <div class="p-3">
                <div class="form-floating mb-3">
                    <input disabled asp-for="Name" type="text" class="form-control" id="floatingName" placeholder="" />
                    <label asp-for="Name" for="floatingName"></label>
                </div>
                <div class="form-floating mb-3">
                    <input disabled asp-for="Description" type="text" class="form-control" id="floatingName" placeholder="" />
                    <label asp-for="Description" for="floatingName"></label>
                </div>
                <div class="form-floating mb-3">
                    <input disabled asp-for="Price" type="text" class="form-control" id="floatingName" placeholder="" />
                    <label asp-for="Price" for="floatingName"></label>
                </div>
                <div class="form-floating mb-3">
                    <input disabled asp-for="Sqft" type="text" class="form-control" id="floatingName" placeholder="" />
                    <label asp-for="Sqft" for="floatingName"></label>
                </div>
                <div class="form-floating mb-3">
                    <input disabled asp-for="Occupancy" type="text" class="form-control" id="floatingName" placeholder="" />
                    <label asp-for="Occupancy" for="floatingName"></label>

                </div>
                <div class="form-floating mb-3">
                    <input disabled asp-for="ImageUrl" type="text" class="form-control" id="floatingName" placeholder="" />
                    <label asp-for="ImageUrl" for="floatingName"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash-fill"></i>
                             Delete Villa
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle-fill"></i>
                             Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
