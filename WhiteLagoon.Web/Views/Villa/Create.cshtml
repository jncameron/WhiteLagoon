@model WhiteLagoon.Domain.Entities.Villa

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Add Villa</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <div class="p-3">
                <div class="form-floating mb-3">
                    <input asp-for="Name" type="text" class="form-control" id="floatingName" placeholder="" />
                    <label asp-for="Name" for="floatingName"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Description" type="text" class="form-control" id="floatingName" placeholder="" />
                    <label asp-for="Description" for="floatingName"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Price" type="text" class="form-control" id="floatingName" placeholder="" />
                    <label asp-for="Price" for="floatingName"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Sqft" type="text" class="form-control" id="floatingName" placeholder="" />
                    <label asp-for="Sqft" for="floatingName"></label>
                    <span asp-validation-for="Sqft" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Occupancy" type="text" class="form-control" id="floatingName" placeholder="" />
                    <label asp-for="Occupancy" for="floatingName"></label>
                    <span asp-validation-for="Occupancy" class="text-danger"></span>

                </div>
                <div class="form-floating mb-3">
                    <input asp-for="ImageUrl" type="text" class="form-control" id="floatingName" placeholder="" />
                    <label asp-for="ImageUrl" for="floatingName"></label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-plus-circle-fill"></i>
                            Add Villa
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle-fill"></i>
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}